<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="120dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp">


<androidx.cardview.widget.CardView
    android:layout_marginHorizontal="10dp"
    android:layout_width="match_parent"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:id="@+id/statelayout"
        android:orientation="vertical">
        <TextView
            android:id="@+id/state_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State Name"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:padding="5dp"/>
        <View
            android:layout_width="350dp"
            android:layout_height="0.5dp"
            android:background="#c4c4c4"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:paddingHorizontal="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Total"
                android:textColor="#d93300"
                android:layout_weight="1"
                android:textSize="10sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Active"
                android:textColor="#0e69b3"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="10sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Recovered"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#0da805"
                android:textSize="10sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Deceased"
                android:gravity="center"
                android:textColor="#2e3a52"
                android:layout_weight="1"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/confirmedcases"
                android:text="Total Cases"
                android:textColor="#d93300"
                android:layout_weight="1"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="0dp"
                android:id="@+id/activecases"
                android:layout_height="match_parent"
                android:text="Active Cases"
                android:textColor="#0e69b3"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Recovered Cases"
                android:gravity="center"
                android:id="@+id/recoveredcases"
                android:layout_weight="1"
                android:textColor="#0da805"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Deceased Cases"
                android:gravity="center"
                android:id="@+id/deceasedcases"
                android:textColor="#2e3a52"
                android:layout_weight="1"
                android:textSize="16sp"/>

        </LinearLayout>
        <View
            android:layout_width="350dp"
            android:layout_height="0.5dp"
            android:background="#c4c4c4"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/statelayout"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>

</RelativeLayout>